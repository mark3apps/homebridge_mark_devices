    "version": "0.2.0",
    "configurations": [
        {
            "name": "Get Current Temperature",
            "type": "python",
            "request": "launch",
            "program": "homebridge_mark_devices",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "Get",
                "BedRoomThermostat",
                "TargetHeatingCoolingState",
                "-d"
            ]
        },
        {
            "name": "Update Values",
            "type": "python",
            "request": "launch",
            "program": "homebridge_mark_devices",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "Update",
                "BedRoomThermostat",
                "Values",
                "-d"
            ]
        },
        {
